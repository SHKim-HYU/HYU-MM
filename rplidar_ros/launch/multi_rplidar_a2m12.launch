<!--
  Used for visualising rplidar in action.  
  
  It requires rplidar.launch.
 -->
<launch>
  <include ns="rplidar0" file="$(find rplidar_ros)/launch/rplidar_a2m12.launch">
        <arg name="serial_port" value="/dev/rplidar_Front"/>
        <arg name="frame_id" value="laser0"/>
  </include>
  <include ns="rplidar1" file="$(find rplidar_ros)/launch/rplidar_a2m12.launch">
        <arg name="serial_port" value="/dev/rplidar_Rear"/>
        <arg name="frame_id" value="laser1"/>
  </include>
  
  <param name="robot_description" textfile="$(find rplidar_ros)/robots/rplidar_urdf.urdf" />
  <param name="use_gui" value="true"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

</launch>
